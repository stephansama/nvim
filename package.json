{
	"private": true,
	"name": "nvim",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "tstl --watch",
		"build": "tstl",
		"fmt:check": "prettier . --check",
		"fmt:write": "prettier . --write",
		"build:schema": "node ./scripts/build-schema.mjs",
		"snippets:sync": "node ./scripts/snippets-sync.mjs",
		"snippets:merge": "node ./scripts/snippets-merge.mjs",
		"prepare": "husky"
	},
	"prettier": {
		"quoteProps": "consistent",
		"plugins": [
			"prettier-plugin-organize-imports",
			"prettier-plugin-sort-package-json",
			"@prettier/plugin-lua"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@gkzhb/lua-types-nvim": "^0.0.7",
		"@prettier/plugin-lua": "^0.0.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"lua-types": "^2.13.1",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.2.0",
		"prettier-plugin-sort-package-json": "^1.1.0",
		"typescript": "^5.9.2",
		"typescript-to-lua": "^1.32.0",
		"zod": "^4.1.5"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*": "prettier --write"
	}
}
